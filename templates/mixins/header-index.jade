mixin indexHeader(post)
	if post
		if post.link
			#header.default-header.flex-row-container.flex-start.homepage-header
				.container.text-center
					.heading
						h1= post.title
					.intro
						p!= post.subTitle
				video(id="video-background" autoplay loop muted plays-inline).video-homepage
					source(src="#{post.link}" type="video/mp4")

		else if post.medium_url || post.small_url || post.large_url || post.x_large_url
			#header.default-header.flex-row-container.flex-start.hero-image
				img(srcset='#{post.small_url} 500w, #{post.medium_url} 900w, #{post.large_url} 1200w, #{post.x_large_url} 2000w' src='#{post.medium_url}' alt=post.title)
				.container.text-center
					.heading.flex-1
						h1= post.title
					.intro.flex-1
						p!= post.subTitle

		else
			#header.default-header.flex-row-container.flex-start.hero-image.no-image
				.container.text-center
					.heading.flex-1
							h1= post.title
					.intro.flex-1
						p!= post.subTitle

	else
		#header.plain-header.flex-row-container.flex-start.no-image
			.header-intro.container.flex-1
				.row
